generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatar    String?  // User profile avatar image URL
  isActive  Boolean  @default(true)
  isAdmin   Boolean  @default(false)
  roles     Role[]   @relation("UserRoles") // Many-to-many: user can have multiple roles
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  permissions Permission[] @relation("RolePermissions")
  users       User[]       @relation("UserRoles") // Many-to-many: role can be assigned to multiple users
}

model Permission {
  id    String @id @default(uuid())
  name  String @unique
  roles Role[] @relation("RolePermissions")
}

model Page {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     Json // store blocks/sections (Elementor-like structure)
  meta        Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isPublished Boolean  @default(false)
}

model Post {
  id            String     @id @default(uuid())
  title         String
  slug          String     @unique
  excerpt       String?
  content       String
  thumbnail     String?
  gallery       String[]   @default([])
  seo           Json?
  authorId      String
  author        User       @relation(fields: [authorId], references: [id])
  categoryId    String?
  category      Category?  @relation(fields: [categoryId], references: [id])
  tags          String[]   @default([])
  isPublished   Boolean    @default(false)
  publishedAt   DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  posts       Post[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Service {
  id            String   @id @default(uuid())
  title         String
  slug          String   @unique
  description   String?
  content       String
  icon          String?
  thumbnail String?
  features      String[] @default([])
  price         Float?
  isPublished   Boolean  @default(false)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Project {
  id            String   @id @default(uuid())
  title         String
  slug          String   @unique
  description   String?
  content       String
  client        String?
  category      String?
  tags          String[] @default([])
  thumbnail String?
  images        String[] @default([])
  completedAt   DateTime?
  isPublished   Boolean  @default(false)
  isFeatured    Boolean  @default(false)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Setting {
  id          String   @id @default(uuid())
  key         String   @unique
  value       Json
  description String?
  group       String?  // e.g., 'general', 'seo', 'social', 'email', etc.
  isPublic    Boolean  @default(false) // if true, can be accessed without auth
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Menu Management Models
model Menu {
  id          String     @id @default(uuid())
  name        String     // e.g., "Main Menu", "Footer Menu"
  slug        String     @unique // e.g., "main-menu", "footer-menu"
  position    String?    // e.g., "header", "footer", "sidebar"
  description String?
  items       MenuItem[]
  isPublished Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([slug])
  @@index([position])
}

model MenuItem {
  id       String  @id @default(uuid())
  menuId   String
  menu     Menu    @relation(fields: [menuId], references: [id], onDelete: Cascade)
  
  title    String
  type     String  // 'custom-link', 'category-blogs', 'custom-page', 'article'
  link     String  // URL or slug
  icon     String?
  target   String  @default("_self") // '_blank' or '_self'
  cssClass String?
  
  parentId String?
  parent   MenuItem?  @relation("MenuItemChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children MenuItem[] @relation("MenuItemChildren")
  
  order       Int     @default(0)
  isPublished Boolean @default(true)
  meta        Json?   // Additional metadata
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([menuId])
  @@index([parentId])
  @@index([order])
}

// Page Builder Models
model PageBuilder {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  description String?
  sections    Section[]
  seo         Json?     // SEO metadata (title, description, keywords, og tags)
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([isPublished])
}

model Section {
  id            String      @id @default(uuid())
  pageId        String
  page          PageBuilder @relation(fields: [pageId], references: [id], onDelete: Cascade)
  
  name          String      // e.g., "Hero Section", "Products Section"
  order         Int         @default(0)
  settings      Json?       // backgroundColor, backgroundImage, padding, margin, etc.
  rows          Row[]
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([pageId])
  @@index([order])
}

model Row {
  id        String   @id @default(uuid())
  sectionId String
  section   Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  
  order     Int      @default(0)
  settings  Json?    // columnsGap, background, etc.
  columns   Column[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sectionId])
  @@index([order])
}

model Column {
  id         String      @id @default(uuid())
  rowId      String
  row        Row         @relation(fields: [rowId], references: [id], onDelete: Cascade)
  
  width      Int         @default(12) // Bootstrap-style grid (1-12)
  order      Int         @default(0)
  settings   Json?       // alignment, padding, etc.
  components Component[]
  
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([rowId])
  @@index([order])
}

model Component {
  id        String   @id @default(uuid())
  columnId  String
  column    Column   @relation(fields: [columnId], references: [id], onDelete: Cascade)
  
  type      String   // 'text', 'image', 'rich-text', 'gallery', 'banner', 'carousel', 'product-card', etc.
  order     Int      @default(0)
  props     Json     // Component-specific configuration and data
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([columnId])
  @@index([order])
}

