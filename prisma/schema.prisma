model Page {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  content     Json      // store blocks/sections (Elementor-like structure)
  meta        Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isPublished Boolean   @default(false)
}

model Media {
  id        String   @id @default(uuid())
  url       String
  type      String
  alt       String?
  ownerId   String?
  ownerType String?  // e.g., "Tour", "Destination", etc.
  createdAt DateTime @default(now())
}

