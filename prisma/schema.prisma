generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatar    String?
  isActive  Boolean  @default(true)
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  roles     Role[]   @relation("UserRoles")
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  permissions Permission[] @relation("RolePermissions")
  users       User[]       @relation("UserRoles")
}

model Permission {
  id    String @id @default(uuid())
  name  String @unique
  roles Role[] @relation("RolePermissions")
}

model Page {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     Json
  meta        Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isPublished Boolean  @default(false)
}
 
model Post {
  id          String     @id @default(uuid())
  title       String
  slug        String     @unique
  excerpt     String?
  content     String
  thumbnail   String?
  gallery     String[]   @default([])
  seo         Json?
  authorId    String
  tags        String[]   @default([])
  isPublished Boolean    @default(false)
  publishedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  author      User       @relation(fields: [authorId], references: [id])
  categories  Category[] @relation("PostCategories")
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  posts       Post[]   @relation("PostCategories")
}

model Service {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String?
  content     String
  icon        String?
  thumbnail   String?
  features    String[] @default([])
  price       Float?
  isPublished Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  description String?
  content     String
  client      String?
  category    String?
  tags        String[]  @default([])
  thumbnail   String?
  images      String[]  @default([])
  completedAt DateTime?
  isPublished Boolean   @default(false)
  isFeatured  Boolean   @default(false)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Setting {
  id          String   @id @default(uuid())
  key         String   @unique
  value       Json
  description String?
  group       String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Menu {
  id          String     @id @default(uuid())
  name        String
  slug        String     @unique
  position    String?
  description String?
  itemsCache  Json?
  isPublished Boolean    @default(false)
  version     Int        @default(1)
  cacheKey    String?    @unique
  lastCached  DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  items       MenuItem[]

  @@index([slug])
  @@index([position])
  @@index([isPublished])
  @@index([cacheKey])
}

model MenuItem {
  id          String     @id @default(uuid())
  menuId      String
  title       String
  slug        String     @unique
  type        String     // 'category-articles' | 'single-article' | 'page' | 'service' | 'project' | 'custom-link' | 'external-link'
  reference   Json?      // String for single entity OR Array for multiple (category-articles): 'about-us' OR ['tech', 'business']
  url         String?    // URL for custom/external links or resolved URL
  icon        String?
  target      String     @default("_self")
  cssClass    String?
  parentId    String?
  order       Int        @default(0)
  isPublished Boolean    @default(true)
  meta        Json?      // Additional metadata (seo, description, image, etc.)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  menu        Menu       @relation(fields: [menuId], references: [id], onDelete: Cascade)
  parent      MenuItem?  @relation("MenuItemChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children    MenuItem[] @relation("MenuItemChildren")

  @@index([menuId])
  @@index([parentId])
  @@index([type])
  @@index([order])
  @@index([slug])
  @@index([isPublished])
}

model PageBuilder {
  id               String    @id @default(uuid())
  title            String
  slug             String    @unique
  description      String?
  content          Json
  seo              Json?
  isPublished      Boolean   @default(false)
  isDraft          Boolean   @default(true)
  publishedAt      DateTime?
  version          Int       @default(1)
  draftContent     Json?
  publishedContent Json?
  cacheKey         String?   @unique
  lastCached       DateTime?
  viewCount        Int       @default(0)
  lastViewed       DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([slug])
  @@index([isPublished])
  @@index([isDraft])
  @@index([cacheKey])
  @@index([publishedAt])
}
