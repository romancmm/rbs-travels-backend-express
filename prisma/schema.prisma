generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatar    String?  // User profile avatar image URL
  isActive  Boolean  @default(true)
  isAdmin   Boolean  @default(false)
  roles     Role[]   @relation("UserRoles") // Many-to-many: user can have multiple roles
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  permissions Permission[] @relation("RolePermissions")
  users       User[]       @relation("UserRoles") // Many-to-many: role can be assigned to multiple users
}

model Permission {
  id    String @id @default(uuid())
  name  String @unique
  roles Role[] @relation("RolePermissions")
}

model Page {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     Json // store blocks/sections (Elementor-like structure)
  meta        Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isPublished Boolean  @default(false)
}

model Post {
  id            String     @id @default(uuid())
  title         String
  slug          String     @unique
  excerpt       String?
  content       String
  thumbnail     String?
  gallery       String[]   @default([])
  seo           Json?
  authorId      String
  author        User       @relation(fields: [authorId], references: [id])
  categoryId    String?
  category      Category?  @relation(fields: [categoryId], references: [id])
  tags          String[]   @default([])
  isPublished   Boolean    @default(false)
  publishedAt   DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  posts       Post[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Service {
  id            String   @id @default(uuid())
  title         String
  slug          String   @unique
  description   String?
  content       String
  icon          String?
  thumbnail String?
  features      String[] @default([])
  price         Float?
  isPublished   Boolean  @default(false)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Project {
  id            String   @id @default(uuid())
  title         String
  slug          String   @unique
  description   String?
  content       String
  client        String?
  category      String?
  tags          String[] @default([])
  thumbnail String?
  images        String[] @default([])
  completedAt   DateTime?
  isPublished   Boolean  @default(false)
  isFeatured    Boolean  @default(false)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Setting {
  id          String   @id @default(uuid())
  key         String   @unique
  value       Json
  description String?
  group       String?  // e.g., 'general', 'seo', 'social', 'email', etc.
  isPublic    Boolean  @default(false) // if true, can be accessed without auth
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// OPTIMIZED MENU MANAGEMENT (JSON-based)
// Performance: Single query to fetch entire menu tree
// ============================================
model Menu {
  id          String   @id @default(uuid())
  name        String   // e.g., "Main Menu", "Footer Menu"
  slug        String   @unique // e.g., "main-menu", "footer-menu"
  position    String?  // e.g., "header", "footer", "sidebar"
  description String?
  
  // JSON structure for entire menu tree (better performance)
  items       Json     // Array of menu items with nested children
  
  // Publishing & Performance
  isPublished Boolean  @default(false)
  version     Int      @default(1)
  
  // Caching metadata (for Redis/CDN integration)
  cacheKey    String?  @unique // e.g., "menu:main-menu:v1"
  lastCached  DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([position])
  @@index([isPublished])
  @@index([cacheKey])
}

// ============================================
// OPTIMIZED PAGE BUILDER (JSON-based)
// Performance: Single query for entire page structure
// Scalability: Easy versioning, drafts, and caching
// ============================================
model PageBuilder {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  description String?
  
  // JSON structure for entire page (sections -> rows -> columns -> components)
  content     Json      // Complete page structure in single field
  
  // SEO & Metadata
  seo         Json?     // {title, description, keywords, ogTags, canonical, etc.}
  
  // Publishing & Versioning
  isPublished Boolean   @default(false)
  isDraft     Boolean   @default(true)
  publishedAt DateTime?
  version     Int       @default(1)
  
  // Draft/Published content separation for better performance
  draftContent     Json? // Working draft content
  publishedContent Json? // Last published version (cached for public API)
  
  // Caching metadata (for Redis/CDN integration)
  cacheKey    String?   @unique // e.g., "page:home:v2"
  lastCached  DateTime?
  
  // Analytics & Performance tracking
  viewCount   Int       @default(0)
  lastViewed  DateTime?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([isPublished])
  @@index([isDraft])
  @@index([cacheKey])
  @@index([publishedAt])
}

